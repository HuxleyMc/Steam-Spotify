# Spotify app client ID (required)
CLIENTID=

# Spotify app client secret (required)
CLIENTSECRET=

# Steam username (required)
STEAMUSERNAME=

# Steam password (required)
STEAMPASSWORD=

# Optional Steam Guard code for challenged logins
STEAMGUARD=

# Optional Steam debug logs (set 1 to enable verbose steam-user logs)
STEAM_DEBUG=

# Optional fallback status when nothing is playing (default: Monkey)
NOTPLAYING=

# Optional Spotify redirect URI override (default: http://127.0.0.1:8888/callback)
# Useful if your Spotify app is configured with localhost instead.
SPOTIFY_REDIRECT_URI=
