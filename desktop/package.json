{
  "name": "steam-spotify-desktop",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "css:build": "tailwindcss -c ./tailwind.config.cjs -i ./ui/tailwind.input.css -o ./ui/styles.css",
    "css:watch": "tailwindcss -c ./tailwind.config.cjs -i ./ui/tailwind.input.css -o ./ui/styles.css --watch",
    "dev": "bun run css:build && tauri dev",
    "build": "bun run css:build && tauri build"
  },
  "devDependencies": {
    "@tauri-apps/cli": "2.0.2",
    "tailwindcss": "3.4.17"
  },
  "dependencies": {
    "@tauri-apps/api": "2.0.2"
  }
}
